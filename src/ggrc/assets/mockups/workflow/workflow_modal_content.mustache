<section class="content">
  <div class="hideable-holder">
    <div class="basic-info">
      <div class="info">

        <div class="row-fluid wrap-row">
          <div class="span12">
            <div class="pull-right reset-form">
              {{> /static/mustache/mockup_base_templates/object_setup/fields_visibility_control.mustache}}
